{
  "openapi": "3.0.0",
  "info": {
    "description": "Martin Blanco API",
    "title": "Martin Blanco API",
    "version": "2.0"
  },
  "paths": {
    "/health": {
      "get": {
        "tags": ["Health üè•"],
        "description": "Health üè•",
        "responses": {
          "200": {
            "description": "Health status",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "example": "Ok"
                }
              }
            }
          }
        }
      }
    },
    "/pictures/date/{year}": {
      "get": {
        "tags": ["Pictures"],
        "description": "Year",
        "parameters": [
          {
            "$ref": "#/components/parameters/year"
          }
        ],
        "responses": {
          "200": {
            "description": "Returns all pictures by year",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/YearPayload"
                }
              }
            }
          },
          "404": {
            "description": "Files not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FilesNotFound"
                }
              }
            }
          },
          "500": {
            "description": "Error, Server give up üí•",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error500"
                }
              }
            }
          }
        }
      }
    },
    "/pictures/date/{year}/{month}": {
      "get": {
        "tags": ["Pictures"],
        "description": "Year/Month",
        "parameters": [
          {
            "$ref": "#/components/parameters/year"
          },
          {
            "$ref": "#/components/parameters/month"
          }
        ],
        "responses": {
          "200": {
            "description": "Returns all pictures by year and month",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MonthPayload"
                }
              }
            }
          },
          "404": {
            "description": "Files not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FilesNotFound"
                }
              }
            }
          },
          "500": {
            "description": "Error, Server give up üí•",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error500"
                }
              }
            }
          }
        }
      }
    },
    "/pictures/date/{year}/{month}/{day}": {
      "get": {
        "tags": ["Pictures"],
        "description": "Year/Month/Day",
        "parameters": [
          {
            "$ref": "#/components/parameters/year"
          },
          {
            "$ref": "#/components/parameters/month"
          },
          {
            "$ref": "#/components/parameters/day"
          }
        ],
        "responses": {
          "200": {
            "description": "Returns all pictures by year and month and day",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DayPayload"
                }
              }
            }
          },
          "404": {
            "description": "Files not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FilesNotFound"
                }
              }
            }
          },
          "500": {
            "description": "Error, Server give up üí•",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error500"
                }
              }
            }
          }
        }
      }
    },
    "/pictures/date/{year}/{month}/{day}/{id}": {
      "get": {
        "tags": ["Pictures"],
        "description": "Year/Month/Day",
        "parameters": [
          {
            "$ref": "#/components/parameters/year"
          },
          {
            "$ref": "#/components/parameters/month"
          },
          {
            "$ref": "#/components/parameters/day"
          },
          {
            "$ref": "#/components/parameters/id"
          }
        ],
        "responses": {
          "200": {
            "description": "Year/Month/Day/ID",
            "content": {
              "image/*": {
                "schema": {
                  "type": "string",
                  "format": "binary",
                  "description": "An image"
                }
              }
            }
          },
          "404": {
            "description": "Files not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FilesNotFound"
                }
              }
            }
          },
          "500": {
            "description": "Error, Server give up üí•",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error500"
                }
              }
            }
          }
        }
      }
    },
    "/pictures/random": {
      "get": {
        "tags": ["Pictures"],
        "description": "Random",
        "responses": {
          "200": {
            "description": "Random picture",
            "content": {
              "image/*": {
                "schema": {
                  "type": "string",
                  "format": "binary",
                  "description": "An image"
                }
              }
            }
          },
          "404": {
            "description": "Files not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FilesNotFound"
                }
              }
            }
          },
          "500": {
            "description": "Error, Server give up üí•",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error500"
                }
              }
            }
          }
        }
      }
    }
  },
  "servers": [
    {
      "url": "https://europe-west2-martin-blanco-api-dev.cloudfunctions.net/martin-blanco-api/",
      "description": "# Dev environment"
    },
    {
      "url": "https://europe-west2-martin-blanco-api-prod.cloudfunctions.net/martin-blanco-api/",
      "description": "# Prod environment"
    }
  ],
  "components": {
    "schemas": {
      "DayPayload": {
        "type": "object",
        "properties": {
          "year": {
            "type": "string",
            "$ref": "#/components/schemas/Year"
          },
          "month": {
            "type": "string",
            "$ref": "#/components/schemas/Month"
          },
          "day": {
            "type": "string",
            "$ref": "#/components/schemas/Day"
          },
          "files": {
            "type": "array",
            "$ref": "#/components/schemas/Files"
          }
        }
      },
      "MonthPayload": {
        "type": "object",
        "properties": {
          "year": {
            "type": "string",
            "$ref": "#/components/schemas/Year"
          },
          "month": {
            "type": "string",
            "$ref": "#/components/schemas/Month"
          },
          "files": {
            "type": "array",
            "$ref": "#/components/schemas/Files"
          }
        }
      },
      "FilesNotFound": {
        "type": "object",
        "properties": {
          "year": {
            "type": "string",
            "$ref": "#/components/schemas/Year"
          },
          "message": {
            "type": "string",
            "example": "Files not found"
          }
        }
      },
      "Error500": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Error <name of the route function>, Error: <description of the error>"
          }
        }
      },
      "YearPayload": {
        "type": "object",
        "properties": {
          "year": {
            "type": "string",
            "$ref": "#/components/schemas/Year"
          },
          "files": {
            "type": "array",
            "$ref": "#/components/schemas/Files"
          }
        }
      },
      "Year": {
        "type": "number",
        "description": "## Calendar year starting from 2017",
        "example": 2017
      },
      "Month": {
        "type": "number",
        "description": "## Month number in gregorian calendar year",
        "example": 2
      },
      "Day": {
        "type": "number",
        "description": "## ## Day number in a month in a gregorian calendar year",
        "example": 1
      },
      "Files": {
        "type": "array",
        "description": "array of Files",
        "items": {
          "$ref": "#/components/schemas/File"
        }
      },
      "File": {
        "type": "string",
        "description": "## An URL of a file",
        "example": "https://storage.googleapis.com/martin-blanco/pictures/2017/01/25/2.jpeg"
      },
      "ErrorMessage": {
        "type": "object",
        "description": "Error message",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      },
      "Api": {
        "type": "object",
        "description": "Open API Schema documentationüì°",
        "properties": {
          "name": {
            "type": "string",
            "example": "Martin Blanco API"
          },
          "schemaUrl": {
            "type": "string",
            "example": "https://documenter.getpostman.com/view/61112/SzKZsbGy"
          }
        }
      }
    },
    "parameters": {
      "year": {
        "name": "year",
        "in": "path",
        "required": true,
        "description": "## Calendar year starting from 2017",
        "example": "2017",
        "schema": {
          "type": "number"
        }
      },
      "month": {
        "name": "month",
        "in": "path",
        "required": true,
        "description": "## Month number in gregorian calendar year",
        "example": "1",
        "schema": {
          "type": "number"
        }
      },
      "day": {
        "name": "day",
        "in": "path",
        "required": true,
        "description": "## Day number in a month in a gregorian calendar year",
        "example": "22",
        "schema": {
          "type": "number"
        }
      },
      "id": {
        "name": "id",
        "in": "path",
        "required": true,
        "description": "## Number of picture in a day",
        "example": "1",
        "schema": {
          "type": "number"
        }
      }
    }
  }
}
